<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:id="@+id/chat_room_listitem_linear"
    android:gravity="left"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:id="@+id/chat_room_listitem_text"
        android:paddingLeft="10dp"
        android:textColor="#000"
        android:text="aasdfasdfsdf"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:textColor="#000"
        android:id="@+id/chat_room_listitem_time"
        android:gravity="bottom"
        android:text="오후 10:32"
        android:layout_alignBottom="@+id/chat_room_listitem_text"
        android:layout_toEndOf="@+id/chat_room_listitem_text" />
</RelativeLayout>