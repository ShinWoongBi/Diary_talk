<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:weightSum="10"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:background="#ffd0e1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_menu_title"
            android:textColor="#fff"
            android:textSize="16.7sp"
            android:gravity="center"
            android:text="Friend"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />


        <ImageButton
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:id="@+id/button"
            android:src="@drawable/btn_etc"
            android:background="#00FF0000"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="#B69DFF">

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_height="match_parent"
            android:src="@drawable/friend1"
            android:background="#ececec"
            android:id="@+id/main_menu_friend"
            android:onClick="main_menu"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="#ececec"
            android:src="@drawable/chat1"
            android:id="@+id/main_menu_chat"
            android:onClick="main_menu"
            android:layout_height="match_parent" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:background="#ececec"
            android:src="@drawable/diary2"
            android:id="@+id/main_menu_diary"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:onClick="main_menu"
            android:layout_height="match_parent" />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.8"
        android:id="@+id/main_menu_viewpager">

    </android.support.v4.view.ViewPager>

</LinearLayout>