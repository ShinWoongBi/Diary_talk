<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="bottom">

            <EditText
                android:id="@+id/main_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.6"
                android:hint="계정(이메일)"
                android:inputType="textEmailAddress"
                android:textColor="#000000"
                android:textSize="16.7sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:gravity="top">

            <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textSize="35dp"-->
            <!--android:text="DIARY TALK"-->
            <!--android:gravity="center"-->
            <!--android:textColor="#C9B6FF"/>-->

            <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="4dp"-->
            <!--android:background="#C9B6FF"-->
            <!--android:layout_marginBottom="20dp"/>-->




            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16.7sp"
                android:textColor="#000000"
                android:alpha="0.6"
                android:inputType="textPassword"
                android:hint="비밀번호"
                android:id="@+id/main_password" />

            <CheckBox
                android:id="@+id/activity_main_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16.7sp"
                android:text="로그인 상태 유지"
                android:textColor="#000000"
                android:alpha="0.6" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17.3sp"
                    android:textColor="#000000"
                    android:text="회원이 아니십니까? "/>
                <TextView
                    android:id="@+id/main_register_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00FF0000"
                    android:textSize="17.3sp"
                    android:text="가입"
                    android:textColor="#fec3da" />

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>



    <Button
        android:id="@+id/main_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom"
        android:background="#ffd0e1"
        android:text="로그인"
        android:textColor="#fff"
        android:textSize="23.3sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <!--<TextView-->
        <!--android:id="@+id/textView2"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="1"-->
        <!--android:gravity="center"-->
        <!--android:text="Pink Talk"-->
        <!--android:textColor="#ffd0e1"-->
        <!--android:textSize="53.3sp" />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/img_logo" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

</FrameLayout>